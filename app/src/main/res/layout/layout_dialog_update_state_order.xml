<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cập nhật trạng thái đơn hàng"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="8dp"
        android:textColor="@color/bg_btn"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"
        android:layout_margin="8dp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:id="@+id/spinner_update_state_order"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="8dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="18dp"
            android:text="Cập nhật"
            android:id="@+id/btn_update_state_order"
            app:backgroundTint="@null"
            android:background="@drawable/custom_btn_addition"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginHorizontal="18dp"
            android:text="Hủy"
            android:id="@+id/btn_cancel_update_state_order"
            app:backgroundTint="@null"
            android:background="@drawable/custom_btn_subtraction"
            android:textColor="@color/bg_btn"/>
    </LinearLayout>
</LinearLayout>