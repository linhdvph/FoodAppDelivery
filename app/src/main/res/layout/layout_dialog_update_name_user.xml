<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_detail_food">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white2"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <ImageView
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:src="@drawable/ic_baseline_arrow_back_red_24"
            android:id="@+id/img_arrow_back_confirm_update_name_user"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="Đổi tên người dùng"
            android:textColor="@color/bg_btn"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="2dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:drawableStart="@drawable/profile"
            android:hint="Name"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp"
            android:id="@+id/ed_update_name_user"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/selected_nav"
            android:layout_marginHorizontal="14dp"
            android:visibility="invisible"
            android:id="@+id/tv_error_update_name_user"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:text="Lưu"
            app:backgroundTint="@null"
            android:background="@drawable/custom_btn_get_started"
            android:layout_marginTop="8dp"
            android:id="@+id/btn_confirm_update_user_name"/>
    </LinearLayout>
</LinearLayout>